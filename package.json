{
  "name": "boilerplate",
  "version": "1.0.0",
  "author": "10Pearls",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --fix",
    "clean": "rimraf coverage build tmp",
    "watch": "nodemon -e 'yml, yaml, js, ts, tsx, json' -x 'ts-node' src/server.ts | bunyan -o simple",
    "build": "tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "test": "jest --passWithNoTests",
    "test:unit": "npm test -- tests/unit",
    "test:integration": "npm test -- tests/integration",
    "test:watch": "npm test -- --watch",
    "test:watch:unit": "npm run test:unit -- --watch",
    "test:watch:integration": "npm run test:integration -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:coverage:unit": "npm run test:unit -- --coverage",
    "test:coverage:integration": "npm run test:integration -- --coverage"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@hapi/joi": "^17.1.0",
    "@types/bunyan": "^1.8.8",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.13",
    "@types/express-bunyan-logger": "^1.3.3",
    "@types/hapi__joi": "^16.0.7",
    "@types/helmet": "^0.0.45",
    "@types/http-status-codes": "^1.2.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^13.13.52",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.15",
    "celebrate": "^12.2.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "convict": "^6.2.1",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "2.20.0",
    "express": "^4.17.1",
    "express-bunyan-logger": "^1.3.3",
    "helmet": "^3.21.2",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.13",
    "pg": "^7.17.1",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^2.2.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^8.6.2",
    "typedi": "^0.8.0",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/supertest": "^2.0.11",
    "jest": "26.1.0",
    "nodemon": "2.0.4",
    "supertest": "4.0.2",
    "ts-jest": "26.1.1"
  }
}
